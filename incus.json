{
  "project": "tdp",
  "image": "rockylinux/8/cloud",
  "admin_user": "incus",
  "network": {
    "manage": true,
    "name": "tdp",
    "domain": "tdp",
    "cidr": "192.168.56.1/24"
  },
  "storage": {
    "manage": true,
    "name": "tdp",
    "dir": "./pool",
    "root_size": "40GB"
  },
  "profiles": {
    "master": {
      "devices": {
        "data": {
          "path": "/data",
          "size": "100GB"
        }
      }
    },
    "worker": {
      "devices": {
        "data": {
          "path": "/data",
          "size": "100GB"
        }
      }
    }
  },
  "output_dir": "../tdp-getting-started",
  "hosts": [
    {
      "role": "edge",
      "cpus": 2,
      "memory": 4096,
      "quantity": 1
    },
    {
      "role": "master",
      "cpus": 3,
      "groups": ["master", "master1"],
      "hostname": "master-01",
      "memory": 6144
    },
    {
      "role": "master",
      "cpus": 3,
      "groups": ["master", "master2"],
      "hostname": "master-02",
      "memory": 6144
    },
    {
      "role": "master",
      "cpus": 3,
      "groups": ["master", "master3"],
      "hostname": "master-03",
      "memory": 6144
    },
    {
      "role": "worker",
      "cpus": 2,
      "memory": 3072,
      "quantity": 3,
      "profiles": ["worker"]
    }
  ]
}
